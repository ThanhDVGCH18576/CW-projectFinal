@model IEnumerable<CWFinal_1628.Models.AssignProject>

@{
    ViewBag.Title = "Index";
}
<style>
    .mid{
        text-align:center;
    }
</style>

<h2 class="mid">Manager Assign Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="nav navbar-right">
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0 btn-primary" type="submit">Search</button>
    </form>
</div>
<br />
<br />
<br />
<table class="table table-striped table-hover table-bordered">
    <thead class="alert-info">
        <tr>
            <th class="mid">
                Builder
            </th>
            <th class="mid">
                Project
            </th>
            <th class="mid">
                Supervisor
            </th>
            <th class="mid">
                Type Project
            </th>
            <th class="mid">Action</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Builder.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeProject)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AssignID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "Details", new { id = item.AssignID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.AssignID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
