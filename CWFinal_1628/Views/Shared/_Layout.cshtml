<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />

    <title>@ViewBag.Title - Management Material Systems</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #Menu {
            background-color: #ffbf00;
            border-color: blue;
        }
            #Menu ul li:hover {
                background-color: #ff8000;
            }
        .dropdown-menu{
            background-color:#ffbf00;
        }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" id="Menu">
        <div class="container">
            <div class="navbar-header">
                <div style="margin-right: 10px">
                    <img src="~/Content/images/logo.png" class="img-thumbnail" height="60" width="60" />
                </div>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("3CONG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse" id="MainNavBar">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            MANAGER USER
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Builders", "Index", "Builders")</li>
                            <li>@Html.ActionLink("Supervisors", "Index", "Supervisors")</li>
                            <li>@Html.ActionLink("Salesmans", "Index", "Salesmen")</li>
                            <li>@Html.ActionLink("Investors", "Index", "Investors")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            MANAGER MATERIALS
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Material Types", "Index", "MaterialTypes")</li>
                            <li>@Html.ActionLink("Materials", "Index", "Materials")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("PROJECTS", "Index", "Projects")</li>
                    <li>@Html.ActionLink("NEW WORKS", "Index", "Works")</li>
                    <li>@Html.ActionLink("PROJECT MATERIALS", "Index", "ProjectMaterials")</li>
                    <li>@Html.ActionLink("ASSIGN PROLECTS", "Index", "AssignProjects")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <p>&copy; @DateTime.Now.Year - Management Material Systems</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
