@model IEnumerable<CWFinal_1628.Models.Project>

@{
    ViewBag.Title = "Index";
}
<style>
    .mid {
        text-align: center;
    }
</style>
<h2>Manager Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, null, new { @class = " btn  btn-success" })
</p>
<div class="nav navbar-right">
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0 btn-primary" type="submit">Search</button>
    </form>
</div>
<br />
<br />
<br />
<table class="table table-striped table-hover table-bordered">
    <thead class="alert-info">
        <tr>
            <th class="mid">
                Investor
            </th>
            <th class="mid">
                Salesman
            </th>
            <th class="mid">
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th class="mid">
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th class="mid">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th class="mid">
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th class="mid">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="mid">Action</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Investor.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salesman.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="mid">
                @Html.ActionLink("Edit", "Edit", new { id = item.ProjetcID }, new { @class = "btn btn-warning"}) 
                @Html.ActionLink("Details", "Details", new { id = item.ProjetcID }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ProjetcID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
